<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>BladeAI</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body{background:#0b0b0b;color:#fff;font-family:Arial;margin:0}
    header{padding:18px 20px;border-bottom:1px solid #222;display:flex;justify-content:space-between;align-items:center}
    .gold{color:#d4af37}
    a{color:#d4af37;text-decoration:none}
    main{padding:20px;max-width:900px;margin:0 auto}
    textarea{width:100%;min-height:90px;border-radius:12px;border:1px solid #333;background:#111;color:#fff;padding:12px}
    button{margin-top:10px;padding:12px 14px;border-radius:12px;border:0;background:#d4af37;color:#000;font-weight:700;cursor:pointer}
    pre{white-space:pre-wrap;background:#111;border:1px solid #222;border-radius:14px;padding:14px;margin-top:14px}
  </style>
</head>
<body>
  <header>
    <div><strong class="gold">BladeAI</strong> Assistant</div>
    <div><a href="/">Home</a> • <a href="/products">Products</a> • <a href="/admin">Admin</a></div>
  </header>
  <main>
    <h1 class="gold">Ask BladeAI</h1>
    <textarea id="prompt" placeholder="Ask about shaving, beard care, products, or the site..."></textarea>
    <button id="send">Send</button>
    <pre id="out">Response will appear here…</pre>

    <script>
      const out = document.getElementById("out");
      document.getElementById("send").onclick = async () => {
        const prompt = document.getElementById("prompt").value.trim();
        if(!prompt) return;
        out.textContent = "Thinking...";
        const r = await fetch("/ai/chat", {
          method:"POST",
          headers: {"Content-Type":"application/json"},
          body: JSON.stringify({ prompt })
        });
        const j = await r.json();
        out.textContent = j.response || j.error || "No response";
      };
    </script>
  </main>
</body>
</html>
